<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Swimclub.Mobile.Views.StudentsPage"
             xmlns:CW="clr-namespace:Swimclub.Mobile.CustomWidgets">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar x:Name="StudentSearchBar" Placeholder="Search" CancelButtonColor="Red" 
                       HorizontalTextAlignment="Center" TextChanged="StudentPageSearchBar_TextChanged"></SearchBar>
            <CollectionView x:Name="Coll1" ItemsSource="{Binding Ilist}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding StudentName}" FontSize="16" Grid.Row="0" Grid.ColumnSpan="2"/>
                        <Label Text="{Binding StudentGrade}" Grid.Row="1" Grid.ColumnSpan="2"/>
                        <Label Text="{Binding StudentSwimEnglandNumber}" Grid.Row="2" Grid.Column="0"/>
                            <CW:StudentListButton BindStudentName="{Binding StudentName}" x:Name="TestingButton" Clicked="TestingButton_Clicked" Grid.Row="2" Grid.Column="1" Text="Test Scores" HorizontalOptions="CenterAndExpand" BackgroundColor="Gray"/>
                        <BoxView Grid.Row="3" HorizontalOptions="FillAndExpand" Grid.ColumnSpan="4" 
                        VerticalOptions="Center" HeightRequest="3" BackgroundColor="DarkGray"></BoxView>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>