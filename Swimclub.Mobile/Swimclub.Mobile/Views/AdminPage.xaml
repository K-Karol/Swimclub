<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Swimclub.Mobile.Views.AdminPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid ColumnSpacing="0" RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>

                <Button Text="Modify student data" Grid.Row="0" Grid.ColumnSpan="2" Command="{Binding ModifyStudentDataPage}"/>
                <Button Text="Register new system user" Grid.Row="1" Grid.ColumnSpan="2" Command="{Binding RegisterUserPage}"/>
                <Button Text="Delete a system user" Grid.Row="2" Grid.ColumnSpan="2" Command="{Binding DeleteUserPage}"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>