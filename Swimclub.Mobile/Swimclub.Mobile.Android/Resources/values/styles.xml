<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <color name="primaryTheme">#3949ab</color>
  <color name="primaryDarkTheme">#00227b</color>
  <color name="colorAccentTheme">#424242</color>
  <color name="colorAccentLightTheme">#6d6d6d</color>

  <color name="ListViewSelected">@color/colorAccentTheme</color>
  <color name="ListViewHighlighted">@color/colorAccentLightTheme</color>
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light" />
  <style name="MainTheme" parent="MainTheme.Base">

    <item name="colorPrimary">@color/primaryTheme</item>
    <item name="colorPrimaryDark">@color/primaryDarkTheme</item>
    <item name="colorAccent">@color/colorAccentTheme</item>


    <item name="android:colorPressedHighlight">@color/ListViewSelected</item>
    <item name="android:colorLongPressedHighlight">@color/ListViewHighlighted</item>
    <item name="android:colorFocusedHighlight">@color/ListViewSelected</item>
    <item name="android:colorActivatedHighlight">@color/ListViewSelected</item>
    <item name="android:activatedBackgroundIndicator">@color/ListViewSelected</item>
  </style>
</resources>